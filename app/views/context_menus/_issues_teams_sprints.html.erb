<%# if User.current.allowed_to?(:edit_tags, @project) %>
  <li class="folder">
    <a href="#" class="submenu"><%= l(:label_team) %></a>
    <ul>
        <% Team.find_each do |team| %>
          <li>
          <%= context_menu_link team.team,
                                edit_issue_team_path(:ids => @issue_ids, :team_id => team.id),
                                :remote => true %>
          </li>
         <% end %>
    </ul>
  </li>
  <li class="folder">
    <a href="#" class="submenu"><%= l(:label_sprint) %></a>
    <ul>
      <li>
        <%= context_menu_link "Current",
                              edit_issue_team_path(:ids => @issue_ids, :sprint => "current"),
                              :remote => true %>
      </li>
      <li>
        <%= context_menu_link "Next",
                              edit_issue_team_path(:ids => @issue_ids, :sprint => "next"),
                              :remote => true %>
      </li>
    </ul>
  </li>
<%# end %>
